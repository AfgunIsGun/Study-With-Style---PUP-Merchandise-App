<InventoryManagementScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10

        Label:
            text: "Inventory Management"
            font_size: '24sp'
            size_hint_y: None
            height: '40dp'
            color: (0.48, 0, 0, 1)
            bold: True

        GridLayout:
            cols: 2
            size_hint_y: None
            height: self.minimum_height
            row_default_height: '40dp'
            row_force_default: True
            spacing: 10
            col_default_width: '100dp'
            col_force_default: True
            
            Label:
                text: "Item ID (Load/Delete)"
                size_hint_x: 0.3
                color: 0.2, 0.2, 0.2, 1
            TextInput:
                id: item_id_input
                size_hint_x: 0.7
                hint_text: "Enter ID and press 'Load'"
            
            Label:
                text: "Name"
                size_hint_x: 0.3
                color: 0.2, 0.2, 0.2, 1
            TextInput:
                id: item_name_input
                size_hint_x: 0.7
            
            Label:
                text: "Quantity"
                size_hint_x: 0.3
                color: 0.2, 0.2, 0.2, 1
            TextInput:
                id: quantity_input
                size_hint_x: 0.7
            
            Label:
                text: "Price"
                size_hint_x: 0.3
                color: 0.2, 0.2, 0.2, 1
            TextInput:
                id: price_input
                size_hint_x: 0.7

            Button:
                text: "Select Image"
                size_hint_x: 0.3
                on_release: root.open_file_chooser()
            Label:
                id: image_path_label
                size_hint_x: 0.7
                text: "No image selected"
                color: 0.2, 0.2, 0.2, 1

        BoxLayout:
            size_hint_y: None
            height: '40dp'
            spacing: 10
            Button:
                text: "Add New"
            Button:
                text: "Load Item"
            Button:
                text: "Save Update"
            Button:
                text: "Delete"
                
        Widget:
            size_hint_y: None
            height: '10dp'

        GridLayout:
            cols: 4
            size_hint_y: None
            height: '30dp'
            Label:
                text: "ID"
                bold: True
                color: 0.1, 0.1, 0.1, 1
            Label:
                text: "Name"
                bold: True
                color: 0.1, 0.1, 0.1, 1
            Label:
                text: "Stock"
                bold: True
                color: 0.1, 0.1, 0.1, 1
            Label:
                text: "Price"
                bold: True
                color: 0.1, 0.1, 0.1, 1
                
        ScrollView:
            GridLayout:
                id: inventory_list
                cols: 4
                size_hint_y: None
                height: self.minimum_height

        Button:
            text: "Back"
            size_hint_y: None
            height: '40dp'
            on_release: app.root.current = 'home'
