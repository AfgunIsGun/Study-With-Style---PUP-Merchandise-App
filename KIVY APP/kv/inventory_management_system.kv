<InventoryManagementScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10

        Label:
            text: "Inventory Management"
            font_size: '24sp'
            size_hint_y: None
            height: '40dp'
            color: (0.48, 0, 0, 1)
            bold: True

        GridLayout:
            cols: 2
            size_hint_y: None
            height: self.minimum_height
            row_default_height: '40dp'
            row_force_default: True
            spacing: 10
            
            Label:
                text: "Item ID (for Load/Delete)"
                text_size: self.width, None
                halign: 'left'
                valign: 'middle'
            TextInput:
                id: item_id_input
                hint_text: "Enter ID and press 'Load'"
            
            Label:
                text: "Name"
                text_size: self.width, None
                halign: 'left'
                valign: 'middle'
            TextInput:
                id: item_name_input
            
            Label:
                text: "Quantity"
                text_size: self.width, None
                halign: 'left'
                valign: 'middle'
            TextInput:
                id: quantity_input
            
            Label:
                text: "Price"
                text_size: self.width, None
                halign: 'left'
                valign: 'middle'
            TextInput:
                id: price_input

            Button:
                text: "Select Image"
                on_release: root.open_file_chooser()
            Label:
                id: image_path_label
                text: "No image selected"
                text_size: self.width, None
                halign: 'left'
                valign: 'middle'

        BoxLayout:
            size_hint_y: None
            height: '40dp'
            spacing: 10
            Button:
                text: "Add New"
                on_release: root.add_item()
            Button:
                text: "Load Item"
                on_release: root.load_item_for_update()
            Button:
                text: "Save Update"
                on_release: root.update_item()
            Button:
                text: "Delete"
                on_release: root.delete_item()

        Widget:
            size_hint_y: None
            height: '10dp'

        GridLayout:
            cols: 4
            size_hint_y: None
            height: '30dp'
            Label:
                text: "ID"
                bold: True
            Label:
                text: "Name"
                bold: True
            Label:
                text: "Stock"
                bold: True
            Label:
                text: "Price"
                bold: True
                
        ScrollView:
            GridLayout:
                id: inventory_list
                cols: 4
                size_hint_y: None
                height: self.minimum_height
                row_default_height: '30dp'
                row_force_default: True

        Button:
            text: "Back"
            size_hint_y: None
            height: '40dp'
            on_release: app.root.current = 'home'
