<InventoryManagementScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 15

        Label:
            text: "Inventory Management"
            font_size: '24sp'
            size_hint_y: None
            height: '40dp'
            color: (0.48, 0, 0, 1)
            bold: True

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
            spacing: 5

            BoxLayout:
                size_hint_y: None
                height: '40dp'
                Label:
                    text: "Item ID (Load/Delete)"
                    size_hint_x: 0.4
                    text_size: self.size
                    halign: 'left'
                    valign: 'middle'
                TextInput:
                    id: item_id_input
                    size_hint_x: 0.6
                    hint_text: "Enter ID"

            BoxLayout:
                size_hint_y: None
                height: '40dp'
                Label:
                    text: "Name"
                    size_hint_x: 0.4
                    text_size: self.size
                    halign: 'left'
                    valign: 'middle'
                TextInput:
                    id: item_name_input
                    size_hint_x: 0.6

            BoxLayout:
                size_hint_y: None
                height: '40dp'
                Label:
                    text: "Quantity"
                    size_hint_x: 0.4
                    text_size: self.size
                    halign: 'left'
                    valign: 'middle'
                TextInput:
                    id: quantity_input
                    size_hint_x: 0.6

            BoxLayout:
                size_hint_y: None
                height: '40dp'
                Label:
                    text: "Price"
                    size_hint_x: 0.4
                    text_size: self.size
                    halign: 'left'
                    valign: 'middle'
                TextInput:
                    id: price_input
                    size_hint_x: 0.6
            
            BoxLayout:
                size_hint_y: None
                height: '40dp'
                Button:
                    text: "Select Image"
                    size_hint_x: 0.4
                    on_release: root.open_file_chooser()
                Label:
                    id: image_path_label
                    text: "No image selected"
                    size_hint_x: 0.6
                    text_size: self.size
                    halign: 'left'
                    valign: 'middle'

        BoxLayout:
            size_hint_y: None
            height: '40dp'
            spacing: 10
            Button:
                text: "Add New"
                on_release: root.add_item()
            Button:
                text: "Load Item"
                on_release: root.load_item_for_update()
            Button:
                text: "Save Update"
                on_release: root.update_item()
            Button:
                text: "Delete"
                on_release: root.delete_item()

        Widget:
            size_hint_y: None
            height: '10dp'

        GridLayout:
            cols: 4
            size_hint_y: None
            height: '30dp'
            Label:
                text: "ID"
                bold: True
            Label:
                text: "Name"
                bold: True
            Label:
                text: "Stock"
                bold: True
            Label:
                text: "Price"
                bold: True
                
        ScrollView:
            GridLayout:
                id: inventory_list
                cols: 4
                size_hint_y: None
                height: self.minimum_height
                row_default_height: '30dp'
                row_force_default: True

        Button:
                text: "View Shop"
                on_release: app.root.current = 'home'
            
        Button:
                text: "Log Out"
                background_color: (0.8, 0.2, 0.2, 1) # Make it look different
                on_release: root.logout()
