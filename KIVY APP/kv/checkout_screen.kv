<CheckoutScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10

        Label:
            text: "STUDY WITH PASSION"
            font_size: '24sp'
            size_hint_y: None
            height: '40dp'
            color: (0.48, 0, 0, 1)
            bold: True

        ScrollView:
            do_scroll_x: False
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                padding: 10
                spacing: 10

                Label:
                    text: "Order Summary"
                    font_size: '18sp'
                    bold: True
                    color: (0.48, 0, 0, 1)
                    size_hint_y: None
                    height: '30dp'
                Label:
                    id: order_summary
                    text: ""
                    font_size: '14sp'
                    size_hint_y: None
                    color: (0.1, 0.1, 0.1, 1)
                    height: self.texture_size[1]
                    halign: 'left'
                    text_size: self.width, None

                Label:
                    text: "Payment Method"
                    font_size: '18sp'
                    bold: True
                    color: (0.48, 0, 0, 1)
                    size_hint_y: None
                    height: '30dp'
                Label:
                    text: "Cash on Delivery"
                    font_size: '14sp'
                    size_hint_y: None
                    color: (0.1, 0.1, 0.1, 1)
                    height: '20dp'

        BoxLayout:
            size_hint_y: None
            height: '50dp'
            spacing: 10
            Button:
                text: "Go Back"
                on_release: app.root.current = 'cart'
            Button:
                text: "CHECK OUT NOW"
                on_release: app.root.current = 'home'