<LoginScreen>:
    username: username_input
    password: password_input

    Image:
        source: '../pup_study_style/static/assets/pup_logo.png'
        size_hint: None, None
        size: '120dp', '120dp'
        pos_hint: {'center_x': 0.5, 'top': 0.9}

    BoxLayout:
        orientation: 'vertical'
        size_hint: 0.8, None
        height: self.minimum_height
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        padding: 20
        spacing: 15

        Label:
            text: "Welcome To PUP Study with Style"
            font_size: '18sp'
            color: (0.6, 0, 0, 1)
            bold: True
            size_hint_y: None
            height: self.texture_size[1]
            halign: 'center'
            valign: 'middle'

        TextInput:
            id: username_input
            hint_text: "Username"
            multiline: False
            size_hint_y: None
            height: '40dp'
            font_size: '16sp'

        TextInput:
            id: password_input
            hint_text: "Password"
            multiline: False
            password: True
            size_hint_y: None
            height: '40dp'
            font_size: '16sp'

        BoxLayout:
            size_hint_y: None
            height: '50dp'
            spacing: 10
            Button:
                text: "Login"
                on_release: root.do_login()
            Button:
                text: "Sign Up"
                on_release: app.root.current = 'register'
